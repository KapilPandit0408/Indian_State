<%- include ("../partials/header")  %>



<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= state.name %> state</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/states/<%=state._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"  name="name" value="<%= state.name %>">
                </div> 
                <div class="form-group">
                    <input class="form-control" type="text"  name="image" value="<%= state.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="history" value="<%= state.history %>" >
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update..!</button>
                </div>
            </form>
            <button class="btn btn-sm btn-dark"><a href="/states">Go To Back</a> </button>
        </div>
    </div>
</div>


<%- include ("../partials/footer")  %>