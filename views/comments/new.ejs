<%- include ("../partials/header")  %>



<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= state.name%> </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/states/<%= state._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text"  name="comment[text]" placeholder="Type Comment Here">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"  name="comment[author]" placeholder="Author Name">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <button class="btn btn-sm btn-dark"><a href="/states">Go To Back</a> </button>
        </div>
    </div>
</div>


<%- include ("../partials/footer")  %>