<%- include ("../partials/header")  %>



<div class="container">
    <header class="jumbotron">
    <div class="container">
        <h1>Welcome to Indian States.!</h1>
        <p style="font-family: 'Patua One', cursive;">View our States from All over India...</p>
        <p>
            <a class="btn btn-primary btn-large" href="/states/new"> Add new state</a>
        </p>
        <p>
            <form action="/states/search" method="GET" class="form-inline">
                <div class="form-group">
                    <input type="text" name="search" placeholder="Search State...." class="form-control">
                    <input type="submit" value="search" class="btn btn-primary">
                </div>
            </form>
        </p>
    </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% states.forEach( function (list) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img width="100%" height="100%" src="<%= list.image %>" >
                    <div class="caption">
                        <h4><%= list.name %></h4>
                        
                    </div>
                    <p>
                        <a href="/states/<%= list._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
                
            </div>
            
            <% }) %>
        </div>
    </div>
    

    <div class="container">
        <div class="row">
            <div class="col text-center">
                <% if (pages > 0) { %>
                    <ul class="pagination list-inline d-flex justify-content-center">
                        <% if (current == 1) { %>
                            <li class="disabled"><a>First</a></li>
                        <% } else { %>
                            <li><a href="/states/1">First</a></li>
                        <% } %>
                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                        <% if (i !== 1) { %>
                            <li class="disabled"><a>...</a></li>
                        <% } %>
                        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                            <% if (i == current) { %>
                                <li class="active"><a><%= i %></a></li>
                            <% } else { %>
                                <li><a href="/states/<%= i %>"><%= i %></a></li>
                            <% } %>
                            <% if (i == Number(current) + 4 && i < pages) { %>
                                <li class="disabled"><a>...</a></li>
                            <% } %>
                        <% } %>
                        <% if (current == pages) { %>
                            <li class="disabled"><a>Last</a></li>
                        <% } else { %>
                            <li><a href="/states/<%= pages %>">Last</a></li>
                        <% } %>
                    </ul>
                <% } %>
            </div>
        </div>
    </div>

<%- include ("../partials/footer")  %>