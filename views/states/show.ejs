<%- include ("../partials/header")  %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"> <%= state.name %> History</p>
            <div class="list-group">
                <li class="list-group-item active">  Basic Info </li>
                <li class="list-group-item">Advanced Info</li>
                <li class="list-group-item">Secrete Info</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= state.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Lang:Marathi</h4>
                    <h4> <a><%= state.name %></a></h4>
                    <p><%= state.history%></p>
                    <div id="show">
                        <a href="/states/<%=state.id%>/edit">
                            <button id="show" type="button" class="btn btn-success">
                                Edit
                            </button>
                        </a>
                            <form action="/states/<%=state.id%>?_method=DELETE" method="POST">
                                <button id="show" class="btn btn-lg btn-danger">
                                    Delete
                                </button>
                            </form>  
                    </div>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-primary" href="/states/<%= state._id %>/comments/new">Add New Comment to <%= state.name %></a>
                </div>
                <hr>
                <% state.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <b><%= comment.author%></b>
                            <span class="pull-right"><b><%= new Date()%></b></span>
                            <p>
                                <i><%= comment.text%></i>
                            </p>
                        </div>
                    </div>

                    <% }) %>
            </div>
        </div>
    </div>
</div>

        
         






<%- include ("../partials/footer")  %>