<%- include ("./partials/header")  %>



<div class="container">
    <header class="jumbotron">
    <div class="container">
        <h1>Welcome to Indian States.!</h1>
        <p style="font-family: 'Patua One', cursive;">View our States from All over India...</p>
        <p>
            <a class="btn btn-primary btn-large" href="/states/new"> Add new state</a>
        </p>
    </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% states.forEach( function (list) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img width="100%" height="100%" src="<%= list.image %>" >
                    <div class="caption">
                        <h4><%= list.name %></h4>
                        
                    </div>
                    <p>
                        <a href="/states/<%= list._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
                
            </div>
            
            <% }) %>
        </div>
    </div>
    
    
    
    

<%- include ("./partials/footer")  %>